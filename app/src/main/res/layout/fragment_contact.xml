<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto">

    <tools:android.support.design.widget.BottomNavigationView
        android:id="@+id/id_bnv_contactMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomNavigation_height"
        android:layout_alignParentBottom="true"
        tools:context="com.sduran.durandroid.fragments.ContactFragment"
        app:itemBackground="@android:color/white"
        design:menu="@menu/navigation_contact" />


    <FrameLayout
        android:layout_above="@id/id_bnv_contactMenu"
        android:id="@+id/id_fl_contactContentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout >

